<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <center>
      <StackPane prefHeight="150.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="MediaView" fitHeight="200.0" fitWidth="200.0" />
            <Slider fx:id="TimeSlider" prefHeight="14.0" prefWidth="850.0" StackPane.alignment="BOTTOM_CENTER" />
         </children></StackPane>
   </center>
   <bottom>
      <VBox prefHeight="46.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" stylesheets="@stylesheet.css" VBox.vgrow="ALWAYS">
               <children>
                  <ButtonBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="65.0" prefWidth="600.0" style="-fx-background-color: #AFEEEE;" stylesheets="@stylesheet.css" HBox.hgrow="ALWAYS">
                     <buttons>
                        <Button fx:id="PlayButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#PlayButton" />
                        <Button fx:id="PauseButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#PauseButton" />
                        <Button fx:id="StopButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#StopButton" />
                        <Button fx:id="OpenFile" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#OpenFile" />
                        <Slider fx:id="VolumeSlider" showTickLabels="true" />
                        <Button fx:id="MuteButton" alignment="CENTER" contentDisplay="CENTER" minWidth="35.0" mnemonicParsing="false" onAction="#MuteButton" />
                     </buttons>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ButtonBar>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
